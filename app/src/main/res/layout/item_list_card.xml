<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCardChair"
            android:layout_width="117dp"
            android:layout_height="158dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/brown_chair" />

        <TextView
            android:id="@+id/txtcardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgCardChair"
            app:layout_constraintTop_toTopOf="@+id/imgCardChair" />

        <TextView
            android:id="@+id/txtcardPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="36dp"
            android:text="TextView"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/txtcardName"
            app:layout_constraintTop_toBottomOf="@+id/txtcardName" />

        <ImageView
            android:id="@+id/btn_card_add"
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_card_count"
            app:layout_constraintStart_toEndOf="@+id/txt_card_count"
            app:layout_constraintTop_toTopOf="@+id/txt_card_count"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/btn_add" />

        <ImageView
            android:id="@+id/btn_card_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtcardPrice"
            app:layout_constraintStart_toEndOf="@+id/txtcardName"
            app:srcCompat="@drawable/btn_sub" />

        <TextView
            android:id="@+id/txt_card_count"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="1"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_card_sub"
            app:layout_constraintStart_toEndOf="@+id/btn_card_sub"
            app:layout_constraintTop_toTopOf="@+id/btn_card_sub"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>